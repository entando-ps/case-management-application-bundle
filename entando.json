{
    "microservices": [
        {
            "name": "case-service",
            "stack": "spring-boot",
            "healthCheckPath": "/api/health",
            "dbms": "mysql",
            "ingressPath": "/cm",
            "deploymentBaseName": "case-management",
            "roles": ["case-management-entry", "case-management-admin"],
            "env" : [
                {
                    "name": "AWS_DEFAULT_REGION",
                    "value": "eu-west-1"
                },
                {
                    "name": "AWS_ACCESS_KEY_ID",
                    "secretKeyRef" : {
                        "name" : "secret_id_with_a_password",
                        "key" : "keyId"
                    }
                },
                {
                    "name": "AWS_SECRET_ACCESS_KEY",
                    "secretKeyRef" : {
                        "name" : "secret_id_with_a_password",
                        "key" : "password"
                    }
                },
                {
                    "name": "S3_BUCKET_NAME",
                    "secretKeyRef" : {
                        "name" : "secret_id_with_a_password",
                        "key" : "bucketname"
                    }
                },
                {
                    "name" : "S3_BUCKET_URL",
                    "secretKeyRef" : {
                        "name" : "secret_id_with_a_password",
                        "key" : "bucketurl"
                    }
                }
            ]
        }
    ],
    "microfrontends": [
        {
            "name": "case-admin-mfe",
            "customElement": "case-admin-mfe",
            "stack": "react",
            "type": "widget",
            "group": "free",
            "publicFolder": "public",
            "titles": {
                "en": "case-admin-mfe",
                "it": "case-admin-mfe"
            },
            "apiClaims": [
                {
                    "name": "case-api",
                    "type": "internal",
                    "serviceName": "case-service"
                }
            ]
        },
        {
            "name": "case-entry-mfe",
            "customElement": "case-entry-mfe",
            "stack": "react",
            "type": "widget",
            "group": "free",
            "publicFolder": "public",
            "titles": {
                "en": "case-entry-mfe",
                "it": "case-entry-mfe"
            },
            "apiClaims": [
                {
                    "name": "case-api",
                    "type": "internal",
                    "serviceName": "case-service"
                }
            ]
        }
    ],
    "svc": [
        "mysql",
        "keycloak"
    ],
    "name": "case-management-bundle",
    "version": "0.0.1",
    "description": "case-management-bundle description",
    "type": "bundle"
}
